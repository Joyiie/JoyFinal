@page
@model Joy.Pages.Manage.Roles.Delete
@{
}
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <h3>Delete</h3>
                  <div class="form-group">
                    <input type="hidden" asp-for="View.Id"/>
                    <label asp-for="View.Name">Name</label>
                    <input type="text" class="form-control" placeholder="Enter role name" asp-for="View.Name" disabled>
                  </div>
                  <div class="form-group">
                    <label asp-for="View.Description">Description</label>
                        <input type="text" class="form-control" placeholder="Enter description" asp-for="View.Description" disabled>
                  </div>
                  <div class="form-group">
                    <label asp-for="View.Abbreviation">Abbreviation</label>
                        <input type="text" class="form-control" placeholder="Enter abbreviation" asp-for="View.Abbreviation" disabled>
                  </div>
                  <div class="form-group alert-danger">                      
                        @Html.ValidationSummary()
                  </div>
                  <div class="form-group">
                      <button type="submit" class="btn btn-danger">Delete</button>
                      <a href="~/manage/roles" class="btn btn-secondary">Cancel</a>
                  </div>


                </form>
            </div>
        </div>
    </div>
</div>
