@page
@model Joy.Pages.Manage.Patients.Delete
@{
}
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <div class="form-group">
                        <label asp-for="View.Code">Code</label>
                        <input type="text" class="form-control" placeholder="Enter role name" asp-for="View.Code">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.FullName">FullName</label>
                        <input type="text" class="form-control" placeholder="Enter FullName" asp-for="View.FullName">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.DateOfBirth">DateOf Birth</label>
                        <input type="date" class="form-control" placeholder="Enter  " asp-for="View.DateOfBirth">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Type">type</label>
                        <select class="form-control" id="Sex" asp-for="View.Type">
                            <option value="1">Chemo</option>
                            <option value="2">Generic</option>
                            <option value="3">Procedure</option>
                            <option value="4">Protocol</option>
                        </select>
                    </div>
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a href="~/manage/patients" class="btn btn-secondary">Cancel</a>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
